<h1><%= title %></h1>

<div class="vehicle-detail">
  <!-- Left Column -->
  <div class="vehicle-image">
    <img src="<%= vehicleData.inv_image %>" alt="Image of <%= vehicleData.inv_make %> <%= vehicleData.inv_model %>">
  </div>

  <!-- Right Column -->
  <div class="vehicle-info">
    <h2><%= vehicleData.inv_year %> <%= vehicleData.inv_make %> <%= vehicleData.inv_model %></h2>
    <p class="price">Price: $<%= vehicleData.inv_price.toLocaleString() %></p>
    <p class="mileage">Mileage: <%= vehicleData.inv_miles.toLocaleString() %> miles</p>
    <p class="description">Description: <%= vehicleData.inv_description %></p>
    <p><strong>Color:</strong> <%= vehicleData.inv_color %></p>
  </div>
</div>
